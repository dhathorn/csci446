<% content_for :subtitle do %>
	..not just  for the country of Spain
<% end %>
<div id="titlebar">
	<ul>
		<li><%= link_to image_tag("arrow_left.png", :border => 0, :size => "25x25", :align => "absmiddle")+"List all Articles", articles_path, :title => "List all Articles" %>
	</ul>
</div>
<h2><%=h "Creating a New Article" %></h2>
<% form_for(@article) do |f| %>
  <%= f.error_messages %>
	<div id="content">
		<ul>
			<li><%= f.label :title %></li>
			<li><%= f.text_field :title %></li>
		</ul>
		<ul>
			<li><%= f.label :author, "Author Name" %></li>
			<li><%= f.text_field :author %></li>
		</ul>
		<ul>
			<li><%= f.label :body %></li>
			<li><%= f.text_area :body %></li>
		</ul>
		<ul>
			<li></li>
			<li style="text-align: left;"><%= f.submit 'Create' %></li>
		</ul>
	</div>
<% end %>
