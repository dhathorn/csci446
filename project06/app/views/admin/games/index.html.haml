%h1
  My Gamez
  =link_to "Add a game", new_admin_game_path
%p
  =image_tag current_user.photo.url
%table
  %tr
    %th Title
    %th Rating
    %td Date Added
  - @games.each do |game|
    %tr
      %td= link_to game.title, edit_admin_game_path(game)
      %td= game.rating_text
      %td= link_to "#{game.created_at.to_s(:longdate)} by #{game.user.same_name(current_user)}", edit_admin_user_path(game.user)
%br/
= page_entries_info @games
= will_paginate @games
