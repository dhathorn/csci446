%h1 Editing member
- form_for [:admin, @user] do |f|
  = f.error_messages
  %p
    = f.label :username
    %br/
    = f.text_field :username
  %p
    = f.label :first_name
    %br/
    = f.text_field :first_name
  %p
    = f.label :last_name
    %br/
    = f.text_field :last_name
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p
    = f.submit 'Update'
= link_to 'Show', @user
|
