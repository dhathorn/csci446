%h1 Listing Members
= will_paginate @users
%table
  %tr
    %th Name
    %th Username
    %th Last Login
    %th Number of games
  - @users.each do |user|
    %tr
      %td= link_to user.long_name, edit_admin_user_path(user)
      %td= h user.username
      %td= time_ago(user.current_login_at)

      %td= user.games.count
%br/
= page_entries_info @users
= link_to 'New member', new_admin_user_path
